#include <getopt.h>
#include <mosquitto.h>
#include <time.h>

struct configuration {
    char *host;
    unsigned int port;
    char *cert;
    char *key;
    char *ca;
    char *cadir;
    bool insecure;
    int qos;
    char *topic;
    unsigned int timeout;
    bool ssl;
    char *user;
    char *password;
    unsigned int warn;
    unsigned int critical;
    char *payload;
    int mqtt_connect_result;
    int mqtt_error;
    bool payload_received;
    int keep_alive;
    struct timespec send_time;
    struct timespec receive_time;
